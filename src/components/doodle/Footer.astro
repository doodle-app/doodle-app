---
import { ModeToggle } from "@/components/ModeToggle";
import { Button } from "@/components/ui/button";
---

<footer>
  <div class="mx-auto max-w-7xl overflow-hidden px-6 py-20 sm:py-24 lg:px-8 flex flex-col space-y-10 justify-center">
    <nav class="mx-auto columns-1 flex flex-col lg:flex-row lg:space-x-12" aria-label="Footer">
      <div class="pb-6">
        <a href="/" class="text-md">Home</a>
      </div>
      <div class="pb-6">
        <a href="/privacy" class="text-md">Privacy</a>
      </div>
      <div class="pb-6">
        <a href="/terms" class="text-md">Terms</a>
      </div>
    </nav>

    <div class="flex justify-center space-x-10">
      <Button variant="link">
        <a href="https://x.com/doodle">
          <span class="sr-only">X</span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path
              d="M13.6823 10.6218L20.2391 3H18.6854L12.9921 9.61788L8.44486 3H3.2002L10.0765 13.0074L3.2002 21H4.75404L10.7663 14.0113L15.5685 21H20.8131L13.6819 10.6218H13.6823ZM11.5541 13.0956L10.8574 12.0991L5.31391 4.16971H7.70053L12.1742 10.5689L12.8709 11.5655L18.6861 19.8835H16.2995L11.5541 13.096V13.0956Z"
            ></path>
          </svg>
        </a>
      </Button>
    </div>

    <div class="flex justify-center">
      <ModeToggle client:load />
    </div>

    <div class="flex justify-center">
      &copy; Copyright 2020 - {new Date().getFullYear()}. All rights reserved.
    </div>
  </div>
</footer>
