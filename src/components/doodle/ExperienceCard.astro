---
interface Props {
    colSpan: string;
  rowSpan: string;
  index: number;
  name: string;
  description: string;
  createdOn: Date;
  thumbnail: string;
}

const { colSpan, rowSpan, index, name, description, thumbnail } = Astro.props;
---


    <div class={`${colSpan} ${rowSpan} aspect-square m-2 rounded-xl relative overflow-hidden bg-black`}>
      <div
        class="absolute top-0 w-full h-full bg-cover bg-center transition-all bg-clip-content px-[10%] pt-[10%] pb-[20%] hover:p-0"
        style={{ backgroundImage: `url(${thumbnail})` }}
      >
        <div class="absolute top-0 left-0 w-full h-full grid grid-cols-2 p-4 content-end">
          <!-- <Typography variant="h5Serif" className="text-white mix-blend-difference"> -->
           <p class="text-4xl text-white mix-blend-difference">
            {name}
            </p>
          <!-- </Typography> -->
          <div class="text-right">
            <!-- <Typography variant="h4" className="text-white mix-blend-difference"> -->
              {description}
            <!-- </Typography> -->
            <!-- <Typography variant="smallText" className="text-white mix-blend-difference"> -->
              <!-- {new Date(createdOn).toLocaleDateString('en-US', {
                month: 'long',
