---
import SectionHeader from "@/components/doodle/SectionHeader.astro";
import ProductCard from "@/components/doodle/ProductCard.astro";

const expereinces: Experience[] = [
  {
    title: "Education",
    thumbnail: "/images/product/teacher.webp",
  },
  {
    title: "Traveling",
    thumbnail: "/images/product/airplane.jpg",
  },
  {
    title: "Illustration",
    thumbnail: "/images/illustrations.png",
  },
  {
    title: "Brainstorming",
    thumbnail: "/images/product/brainstorm.jpg",
  },
  {
    title: "Lettering",
    thumbnail: "/images/product/calligraphy.webp",
  },
  {
    title: "Children",
    thumbnail: "/images/product/children.webp",
  },
];
---

<section class="mx-auto mt-32 max-w-7xl px-8 sm:mt-56">
  <SectionHeader
    heading="Endless Creativity"
    subheading="Explore limitless possibilities with Doodle, perfect for education, travel, note-taking, brainstorming, flowcharts, and stunning illustrations"
  />
  <div class="grid grid-cols-1 grid-flow-row-dense lg:grid-cols-6 -mx-2 pt-4 gap-8">
    {
      expereinces.map((expereince, index) => {
        let colSpan, rowSpan;

        let effectiveIndex = index;
        if (index % 9 === 8 && index + 1 < expereinces.length) {
          effectiveIndex = index + 1;
        } else if (index % 9 === 0 && index - 1 >= 0) {
          effectiveIndex = index - 1;
        }

        switch (effectiveIndex % 10) {
          case 0:
          case 1:
          case 5:
          case 6:
            colSpan = "col-span-1 lg:col-span-3";
            rowSpan = "row-span-1 lg:row-span-3";
            break;
          case 2:
          case 9:
            colSpan = "col-span-1 lg:col-span-4";
            rowSpan = "row-span-1 lg:row-span-4";
            break;
          default:
            colSpan = "col-span-1 lg:col-span-2";
            rowSpan = "row-span-1 lg:row-span-2";
        }

        return (
          <ProductCard
            colSpan={colSpan}
            rowSpan={rowSpan}
            index={index}
            name={expereince.title}
            description={expereince.description}
            createdOn={new Date()}
            thumbnail={expereince.thumbnail}
          />
        );
      })
    }
  </div>
</section>
