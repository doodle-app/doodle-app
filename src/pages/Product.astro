---
import ProductCard from "@/components/doodle/ProductCard.astro"

const expereinces: Experience[] = [
    {
        id: 3,
        title: "Games",
        description: "Play Cool Drwaing Games",
        thumbnail: "/images/games.png"
    },
    {
        id: 2,
        title: "Brainstorming",
        description: "Think of Cool Stuff to Draw",
        thumbnail: "/images/brainstorming.png"
    },
        {
        id: 1,
        title: "Illustrations",
        description: "Draw Cool Stuff on a Screen",
        thumbnail: "/images/illustrations.png"
    },
    {
        id: 4,
        title: "Flowcharts",
        description: "Make Lines and Boxes ",
        thumbnail: "/images/flowcharts.png"
    },
    {
        id: 5,
        title: "Lettering",
        description: "Write Cool Stuff",
        thumbnail: "/images/product/calligraphy.webp"
    }
]

---

<section class="mx-auto mt-32 max-w-7xl px-6 sm:mt-56 lg:px-8">
    <!-- <div class='mt-[100vh] mb-[65vh]'> -->
      <!-- <TextGradientScrollAnimation2 text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum is simply dummy text of the printing and typesetting industry."/> -->
    <!-- </div> -->

    <div class="grid grid-cols-1 grid-flow-row-dense lg:grid-cols-6 -mx-2 pt-4 gap-8">
    {expereinces.map((expereince, index) => {
                  let colSpan, rowSpan;

          let effectiveIndex = index;
          if (index % 9 === 8 && index + 1 < expereinces.length) {
            effectiveIndex = index + 1;
          } else if (index % 9 === 0 && index - 1 >= 0) {
            effectiveIndex = index - 1;
          }

          switch (effectiveIndex % 10) {
            case 0:
            case 1:
            case 5:
            case 6:
              colSpan = 'col-span-3';
              rowSpan = 'row-span-3';
              break;
            case 2:
            case 9:
              colSpan = 'col-span-4';
              rowSpan = 'row-span-4';
              break;
            default:
              colSpan = 'col-span-2';
              rowSpan = 'row-span-2';
          }

        return <ProductCard
            colSpan={colSpan}
            rowSpan={rowSpan}
            index={index}
            name={expereince.title}
            description={expereince.description}
            createdOn={new Date()}
            thumbnail={expereince.thumbnail}
        />
        </div>
    })}

</section>