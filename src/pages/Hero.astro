---
import StaggeredTextAnimation from "@/components/gloz/StaggeredTextAnimation";
import IpadLandscapeAndIphoneIcon from "@/components/apple/IpadLandscapeAndIphoneIcon";
---

<section class="bg-gradient-to-r from-yellow-400 via-pink-400 to-violet-400">
  <div class="bg-gradient-to-t from-background to-30%">
    <div class="relative isolate px-6 pt-14 lg:px-8">
      <div class="mx-auto max-w-7xl py-32 sm:py-48 lg:pt-24 lg:pb-56">
        <div class="w-full flex flex-col justify-center space-y-8">
          <StaggeredTextAnimation className="justify-center text-6xl lg:text-9xl" client:load text="Doodle" />
          <img src="/images/hero.png" alt="Hero" class="mt-8 mx-auto" />
          <StaggeredTextAnimation className="justify-center text-4xl" client:load text="Every line tells a story." />
          <a href="https://apps.apple.com/us/app/drawing-pad-doodle-draw/id1503601939?platform=ios" class="flex justify-center mt-8">
          <img src="/images/apple/appstore.svg" alt="App Store" class="h-14"  />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
